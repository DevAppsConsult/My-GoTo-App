<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.mygotoservices.mygotoandroid.ThankYouActivity"
    tools:showIn="@layout/activity_thank_you">
    <ImageView
        android:layout_width="100dp"
        android:src="@drawable/icons_handshake_100"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:id="@+id/thankYouImage"
        android:layout_height="100dp" />
    <TextView
        android:id="@+id/thanksMessage"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/thankYouImage"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:text="Thank you for choosing MyGoTo."
        android:textStyle="bold|italic"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/backToMain"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/thanksMessage"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="20sp"
        android:textColor="@color/colorPrimaryDark"
        android:text="Go Back"
        android:textStyle="bold|italic"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
